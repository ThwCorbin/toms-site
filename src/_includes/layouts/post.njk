{% extends "layouts/base.njk" %} {% block page_title %}{{ title }}{% endblock %}
{% block main %}
<main class="postMain">

  <div class="letterboxLid">
    <h2 class="pageTeaser">Letterbox</h2>
    <ul class="postType">
    {# Add anchors and collections functionality #}
      <li class="link postArticle">Article</li>
      <li class="link postNote">Note</li>
      <li class="link postCard">Postcard</li>
    </ul>
  </div>
  <hr>

  <article class="postAll postLong">
    <h3 class="postTitle">
      <a href={{ page.filePathStem }}>{{ title }}</a>
    </h3>

    {{ content | safe }}
    
    <ul class="postDataLong postData">
      <li><a href="/">Back</a></li>
      {# How do I make the date work better? #}
      <li><time datetime="{{ page.date.toString() }}">Date</time></li>
    </ul>
  </article>

  {#
  <li>{{ page.url }}</li>
  #} {#
  <li>{{ page.fileSlug }}</li>
  #} {#
  <li>{{ page.inputPath }}</li>
  #}
</main>
{% endblock %}
